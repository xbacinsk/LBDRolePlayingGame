<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestLineJK1">

    <TextView
        android:id="@+id/textViewFragmentJK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'Dobrý deň, JK hovorila, že raz niekto príde. Niečo tu pre vás nechala. Povedala, že táto melódia otvára srdcia aj zámky. Hlavne, keď ju počuje Ex hranú na klavíri. Netuším, kto je Ex a ani neviem hrať na klavíri, ale vy už snáď budete vedieť, čo s tým spraviť...'"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next page in this Quest Line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:onClick="goToNextQuestPageJK" />

</androidx.constraintlayout.widget.ConstraintLayout>
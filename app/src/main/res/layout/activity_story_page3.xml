<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryPage3">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/buttonSP3_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/buttonSP3_1"
        android:scaleType="centerInside"
        android:src="@drawable/s03_01" />

    <ImageView
        android:id="@+id/ivSP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/s03_02" />

    <Button
        android:id="@+id/buttonSP3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonSP3_2"
        android:backgroundTint="@color/material_on_background_disabled"
        android:stateListAnimator="@null"
        android:onClick="goToIncorrectPage"
        />

    <Button
        android:id="@+id/buttonSP3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSP3_1"
        app:layout_constraintBottom_toTopOf="@id/buttonSP3_3"
        android:backgroundTint="@color/material_on_background_disabled"
        android:stateListAnimator="@null"
        android:onClick="goToIncorrectPage"
        />

    <Button
        android:id="@+id/buttonSP3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSP3_2"
        app:layout_constraintBottom_toTopOf="@id/buttonSP3_4"
        android:backgroundTint="@color/material_on_background_disabled"
        android:stateListAnimator="@null"
        android:onClick="goToIncorrectPage"
        />

    <Button
        android:id="@+id/buttonSP3_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSP3_3"
        app:layout_constraintBottom_toTopOf="@id/buttonSP3_5"
        android:backgroundTint="@color/material_on_background_disabled"
        android:stateListAnimator="@null"
        android:onClick="goToIncorrectPage"
        />

    <Button
        android:id="@+id/buttonSP3_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSP3_4"
        app:layout_constraintBottom_toTopOf="@id/buttonSP3_6"
        android:backgroundTint="@color/material_on_background_disabled"
        android:stateListAnimator="@null"
        android:onClick="goToCorrectPage"
        />

    <Button
        android:id="@+id/buttonSP3_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSP3_5"
        app:layout_constraintBottom_toTopOf="@id/ivSP3"
        android:backgroundTint="@color/material_on_background_disabled"
        android:stateListAnimator="@null"
        android:onClick="goToIncorrectPage"
        />

    <FrameLayout
        android:id="@+id/frameLayoutSP3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
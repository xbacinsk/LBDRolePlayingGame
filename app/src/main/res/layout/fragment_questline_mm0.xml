<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestLineMM0">

    <TextView
        android:id="@+id/textViewFragmentMM0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MM hľadaj u jej sestry. U Červeného mlýna 14. \n\nPre kontrolu, že si na správnom mieste, opíš do políčka meno z tretieho zvonku zhora v poslednom stĺpci."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/doorbellEditTextFieldMM0"
        android:inputType="text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentMM0"
        android:shadowColor="@color/black"
        android:hint="Name"
        />

    <Button
        android:id="@+id/buttonToNQPMM0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/doorbellEditTextFieldMM0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="checkDoorbellTextFieldAndGoToNextQuestPageMM"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestLineLBD3">

    <TextView
        android:id="@+id/textViewFragmentLBD3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Už vieš čím, ale ešte nevieš, kam. Odvez sa jednu zastávku smerom na Hlavní nádraží. Samozrejme od miesta zakresleneho na mape.\n\nAaaach, a tu sú deravé schody nahoru. A koľko?"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/stairsEditTextFieldLBD1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stairsEditTextFieldLBD1"
        android:inputType="text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewFragmentLBDPlus1"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD3"
        android:shadowColor="@color/black"
        android:hint="Number"
        />

    <TextView
        android:id="@+id/textViewFragmentLBDPlus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD3"
        app:layout_constraintLeft_toRightOf="@+id/stairsEditTextFieldLBD1"
        app:layout_constraintRight_toLeftOf="@+id/stairsEditTextFieldLBD2"
        app:layout_constraintBottom_toTopOf="@id/buttonToNQ3" />

    <EditText
        android:id="@+id/stairsEditTextFieldLBD2"
        android:inputType="text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textViewFragmentLBDPlus1"
        app:layout_constraintRight_toLeftOf="@+id/textViewFragmentLBDPlus2"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD3"
        android:shadowColor="@color/black"
        android:hint="Number"
        />

    <TextView
        android:id="@+id/textViewFragmentLBDPlus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD3"
        app:layout_constraintLeft_toRightOf="@+id/stairsEditTextFieldLBD2"
        app:layout_constraintRight_toLeftOf="@+id/stairsEditTextFieldLBD3"
        app:layout_constraintBottom_toTopOf="@id/buttonToNQ3" />

    <EditText
        android:id="@+id/stairsEditTextFieldLBD3"
        android:inputType="text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textViewFragmentLBDPlus2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD3"
        android:shadowColor="@color/black"
        android:hint="Number"
        />

    <Button
        android:id="@+id/buttonToNQ3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/stairsEditTextFieldLBD3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="checkTextFieldsAndGoToNextQuestPageLBD"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
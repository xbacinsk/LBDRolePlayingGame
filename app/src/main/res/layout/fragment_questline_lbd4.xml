<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestLineLBD4">

    <TextView
        android:id="@+id/textViewFragmentLBD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ešte potom zídi 15 schodov a pokračuj rovno za nosom a za hádankou:\n\nDva vládci z dvou různých světů,\noba mají ostrou ruku.\nJednomu se klaní les,\ndruhý si lid hlídá z nebes."
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tsNumberEditTextFieldLBD" />

    <TextView
        android:id="@+id/textViewFragmentLBDTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TS -"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tsNumberEditTextFieldLBD"
        app:layout_constraintBottom_toTopOf="@id/buttonToNQ4LBD" />


    <EditText
        android:id="@+id/tsNumberEditTextFieldLBD"
        android:inputType="text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentLBD4"
        app:layout_constraintBottom_toTopOf="@id/buttonToNQ4LBD"
        android:shadowColor="@color/black"
        android:hint="Number"
        />

    <Button
        android:id="@+id/buttonToNQ4LBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/tsNumberEditTextFieldLBD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="checkTsNumberTextFieldAndGoToNextQuestPageLBD"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestLineMKA0">

    <TextView
        android:id="@+id/textViewFragmentMKA0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MKA hľadaj na adrese Hrnčířská 4. \n\nPre kontrolu, že si na správnom mieste, opíš do políčka meno z tretieho zvonku zhora v ľavom stĺpci."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/doorbellEditTextFieldMKA0"
        android:inputType="text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFragmentMKA0"
        android:shadowColor="@color/black"
        android:hint="Name"
        />

    <Button
        android:id="@+id/buttonToNQ0MKA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/doorbellEditTextFieldMKA0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="checkDoorbellTextFieldAndGoToNextQuestPageMKA"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
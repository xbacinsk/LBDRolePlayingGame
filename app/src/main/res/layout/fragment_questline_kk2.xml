<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestLineKK2">

    <TextView
        android:id="@+id/textViewFragmentKK2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AD: 'Len ten človek, ktorý chce ten predmet nájsť - nájsť, ale nepoužiť pre seba - má šancu ho získať.'"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next page in this Quest Line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:onClick="goToNextQuestPageKK" />

</androidx.constraintlayout.widget.ConstraintLayout>